// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
    id              Int      @id @default(autoincrement())
    name            String
    email           String   @unique
    password        String
    admin           Boolean
    profile_picture String
    reminders       Reminder[]
}

model Reminder {
    id              Int        @id @default(autoincrement())
    title           String
    description     String
    completed       Boolean
    userId          Int
    user            User @relation(fields: [userId], references: [id])
}
