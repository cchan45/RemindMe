<div class="container">
    <h1 class="page-header">Admin Panel</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Session ID</th>
                <th>User</th>
                <th>Revoke</th>
            </tr>
        <tbody>
            <% for (const [sessionId, session] of Object.entries(sessions)) { %>
                <tr>
                    <td>
                        <kbd><%= sessionId %></kbd>
                    </td>
                    <td>
                        <%= userModel.findById(JSON.parse(session).passport.user).name  %> (ID: <kbd><%= JSON.parse(session).passport.user %></kbd>)
                    </td>
                    <td>
                        <% if (JSON.parse(session).passport.user != user.id) { %>
                            <a class="btn btn-primary" href="<%= "/admin/revoke/" + sessionId %>">Revoke</a>
                        <% } else { %>
                            <button class="btn btn-primary" disabled>Revoke</button>
                        <% } %>
                    </td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>
